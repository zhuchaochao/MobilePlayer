<?xml version="1.0" encoding="utf-8"?>
<com.zcc.mobileplayer.view.TitleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ff3097fd"
    android:gravity="center_vertical">
    <ImageView
        android:src="@drawable/ic_topbanner_logo"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_search"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_sousuokuang_press"
        android:text="全网搜索"
        android:clickable="true"
        android:background="@drawable/titletextview_bg_shap"
        android:textColor="#ffff"
        android:drawablePadding="8dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_game"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_topbanner_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignRight="@id/iv_game"
            android:background="@drawable/dot" />
    </RelativeLayout>

    <ImageView
        android:layout_marginRight="8dp"
        android:id="@+id/iv_record"
        android:src="@drawable/ic_topbanner_record"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</com.zcc.mobileplayer.view.TitleView>